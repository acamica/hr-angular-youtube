{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "rootDir": ".",
        "outDir": "dist/cjs",
        "baseUrl": ".",
        "noUnusedLocals": true,
        "declaration": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata" : true
    },
    "exclude": [
      "dist",
      "node_modules"
    ]
}

