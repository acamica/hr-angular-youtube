{
    "compilerOptions": {
        "module": "system",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "rootDir": ".",
        "outFile": "main.js",
        "baseUrl": ".",
        "noUnusedLocals": true,
        "paths": {
            "src": ["src"]
        },
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata" : true
    },
    "exclude": [
      "dist",
      "node_modules"
    ]
}

